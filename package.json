{
  "name": "why",
  "displayName": "why",
  "publisher": "why",
  "description": "Allow developers to add and view contextual explanations for why a piece of code was written a certain way. These can be shown inline, on hover, or in a sidebar â€” like sticky notes for dev reasoning.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.99.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "whyAnnotations",
          "title": "Why",
          "icon": "resources/why-icon.svg"
        }
      ]
    },
    "views": {
      "whyAnnotations": [
        {
          "id": "whyAnnotationsView",
          "name": "Annotations",
          "contextualTitle": "Why Annotations"
        }
      ]
    },
    "commands": [
      {
        "command": "whyAnnotations.addAnnotation",
        "title": "Add Why Annotation"
      },
      {
        "command": "whyAnnotations.editAnnotation",
        "title": "Edit Why Annotation",
        "icon": "$(edit)"
      },
      {
        "command": "whyAnnotations.deleteAnnotation",
        "title": "Delete Why Annotation",
        "icon": "$(trash)"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "whyAnnotations.addAnnotation",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "whyAnnotations.editAnnotation",
          "when": "view == whyAnnotationsView && viewItem == annotation",
          "group": "inline"
        },
        {
          "command": "whyAnnotations.deleteAnnotation",
          "when": "view == whyAnnotationsView && viewItem == annotation",
          "group": "inline"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/uuid": "^10.0.0",
    "@types/vscode": "^1.99.3",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "esbuild": "^0.25.1",
    "eslint": "^9.23.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.8.2"
  },
  "dependencies": {
    "uuid": "^11.1.0"
  }
}
